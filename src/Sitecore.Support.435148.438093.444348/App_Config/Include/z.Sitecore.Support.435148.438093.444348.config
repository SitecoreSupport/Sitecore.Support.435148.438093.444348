<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/">
  <sitecore>

    <!-- DATA PROVIDERS -->
    <dataProviders>
      <!--  Custom SqlServerDataProvider that overrides GetEventQueue method.
      -->
      <main type="Sitecore.Data.$(database).$(database)DataProvider, Sitecore.Kernel"
        set:type="Sitecore.Support.Data.$(database).$(database)DataProvider, Sitecore.Support.435148.438093.444348" />
    </dataProviders>

    <settings>
      <!--  EVENT QUEUE SELECT STATEMENT BEHAVIOR
            Sets select statement to have original behavior (with lock) or uses NOLOCK hint.
            Possible values: ORIGINAL, NOLOCK.
            Default value: ORIGINAL
      -->
      <setting name="EventQueue.SelectStatement.TableHint" value="NOLOCK" />
    </settings>

  </sitecore>
</configuration>